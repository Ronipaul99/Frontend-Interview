//[-2,1]
// hmne approach use krni agr abhi tk ka sum hai + jis idx pr hai uska value add krke - sum jo aaya
// agr vo nums[idx] se chotta hai toh mtlb hmara subArray usi idx se strt hoga jis pr hm khde hai..mtlb sum = nums[idx] krdo, or toh chlte rho maxSum ko maintain krte
var maxSubArray = function(nums) {
    let sum = nums[0];
    let maxSum = nums[0];
    for(let idx = 1; idx < nums.length; idx++){
        sum += nums[idx];
        if(sum < nums[idx]){
            sum = nums[idx];
        }
        maxSum = Math.max(maxSum, sum);
    }
    return maxSum;
    
}; 
